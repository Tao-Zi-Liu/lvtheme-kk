    color: {{ block.settings.post_excerpt_color }};
    line-height: 1.6;
    margin-bottom: {{ block.settings.post_excerpt_margin }}px;
    flex-grow: 1;
  }

  .ai-blog-directory__post-link-{{ ai_gen_id }} {
