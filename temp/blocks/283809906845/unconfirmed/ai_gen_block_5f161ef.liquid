    color: inherit;
    text-decoration: none;
  }

  .ai-blog-directory__post-title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.post_title_hover_color }};
  }

  .ai-blog-directory__post-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: {{ block.settings.post_meta_margin }}px;
    font-size: {{ block.settings.post_meta_size }}px;
    color: {{ block.settings.post_meta_color }};
  }

