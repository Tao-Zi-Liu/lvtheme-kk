  }

  .ai-blog-directory__post-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.read_more_hover_bg }};
    color: {{ block.settings.read_more_hover_color }};
    border-color: {{ block.settings.read_more_hover_border }};
  }

  .ai-blog-directory__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-size: 16px;
  }
{% endstyle %}

<blog-directory-{{ ai_gen_id }} class="ai-blog-directory-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-directory__container-{{ ai_gen_id }}">
    {% if block.settings.show_blog_nav %}
      <nav class="ai-blog-directory__nav-{{ ai_gen_id }}">
        {% if block.settings.nav_title != blank %}
          <h2 class="ai-blog-directory__nav-title-{{ ai_gen_id }}">{{ block.settings.nav_title }}</h2>
        {% endif %}
        <ul class="ai-blog-directory__nav-list-{{ ai_gen_id }}">
          {% for blog in blogs %}
            <li class="ai-blog-directory__nav-item-{{ ai_gen_id }}">
              <a href="{{ blog.url }}" class="ai-blog-directory__nav-link-{{ ai_gen_id }}">
                {{ blog.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}

    <div class="ai-blog-directory__latest-{{ ai_gen_id }}">
      {% if block.settings.latest_title != blank %}
        <h2 class="ai-blog-directory__latest-title-{{ ai_gen_id }}">{{ block.settings.latest_title }}</h2>
      {% endif %}

      {% assign all_articles = '' | split: '' %}
      {% for blog in blogs %}
        {% for article in blog.articles limit: 20 %}
          {% assign all_articles = all_articles | concat: article %}
        {% endfor %}
      {% endfor %}

      {% assign sorted_articles = all_articles | sort: 'published_at' | reverse %}

      {% if sorted_articles.size > 0 %}
        <div class="ai-blog-directory__posts-grid-{{ ai_gen_id }}">
          {% for article in sorted_articles limit: block.settings.posts_limit %}
            <article class="ai-blog-directory__post-{{ ai_gen_id }}">
              <a href="{{ article.url }}" class="ai-blog-directory__post-image-wrapper-{{ ai_gen_id }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 800 }}"
                    alt="{{ article.image.alt | escape }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | divided_by: article.image.aspect_ratio | round }}"
                    class="ai-blog-directory__post-image-{{ ai_gen_id }}"
                  >
                {% else %}
                  <div class="ai-blog-directory__post-image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </a>

              <div class="ai-blog-directory__post-content-{{ ai_gen_id }}">
                <h3 class="ai-blog-directory__post-title-{{ ai_gen_id }}">
                  <a href="{{ article.url }}" class="ai-blog-directory__post-title-link-{{ ai_gen_id }}">
                    {{ article.title }}
                  </a>
                </h3>

                <div class="ai-blog-directory__post-meta-{{ ai_gen_id }}">
                  {% if block.settings.show_date %}
                    <time class="ai-blog-directory__post-date-{{ ai_gen_id }}" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                      </svg>
                      {{ article.published_at | date: block.settings.date_format }}
                    </time>
                  {% endif %}

                  {% if block.settings.show_blog_name %}
                    <span class="ai-blog-directory__post-blog-{{ ai_gen_id }}">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                        <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                      </svg>
                      {{ article.blog.title }}
                    </span>
                  {% endif %}
                </div>

                {% if block.settings.show_excerpt and article.excerpt != blank %}
                  <div class="ai-blog-directory__post-excerpt-{{ ai_gen_id }}">
                    {{ article.excerpt | strip_html | truncate: block.settings.excerpt_length }}
                  </div>
                {% endif %}

                <a href="{{ article.url }}" class="ai-blog-directory__post-link-{{ ai_gen_id }}">
                  {{ block.settings.read_more_text }}
                </a>
              </div>
            </article>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-blog-directory__empty-state-{{ ai_gen_id }}">
          No blog posts found. Create your first blog post to get started.
        </div>
      {% endif %}
    </div>
  </div>
</blog-directory-{{ ai_gen_id }}>

<script>
  (function() {
    class BlogDirectory{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('blog-directory-{{ ai_gen_id }}', BlogDirectory{{ ai_gen_id }});
  })();
</script>

