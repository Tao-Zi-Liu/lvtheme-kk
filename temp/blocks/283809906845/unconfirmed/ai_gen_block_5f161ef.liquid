    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-directory__post-blog-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-directory__post-excerpt-{{ ai_gen_id }} {
