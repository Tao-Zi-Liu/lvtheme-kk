{% doc %}
  @prompt
    生成一个立即联系我们的居中cta，英文，带边框占屏幕三分之一宽度
    Need Immediate Assistance?
    If you have questions regarding an order, please contact us directly.
    
    support@lavividhair.com
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-cta-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-contact-cta__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.desktop_width_percent }}%;
    margin: 0 auto;
    padding: {{ block.settings.padding }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
    text-align: center;
  }

  .ai-contact-cta__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    line-height: 1.3;
  }

  .ai-contact-cta__text-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  .ai-contact-cta__email-{{ ai_gen_id }} {
    display: inline-block;
    margin: 0;
    font-size: {{ block.settings.email_size }}px;
    font-weight: {{ block.settings.email_weight }};
    color: {{ block.settings.email_color }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-contact-cta__email-{{ ai_gen_id }}:hover {
    color: {{ block.settings.email_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-contact-cta__container-{{ ai_gen_id }} {
      max-width: 90%;
    }

    .ai-contact-cta__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-contact-cta__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-contact-cta__email-{{ ai_gen_id }} {
      font-size: {{ block.settings.email_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-contact-cta-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-cta__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-contact-cta__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-contact-cta__text-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}

    {% if block.settings.email != blank %}
      <a 
        href="mailto:{{ block.settings.email }}" 
        class="ai-contact-cta__email-{{ ai_gen_id }}"
      >
        {{ block.settings.email }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Contact CTA",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Need Immediate Assistance?"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>If you have questions regarding an order, please contact us directly.</p>"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email address",
      "default": "support@lavividhair.com"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 20,
      "max": 80,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "heading_spacing",
      "label": "Heading spacing",
      "min": 10,
      "max": 40,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "text_spacing",
      "label": "Text spacing",
      "min": 10,
      "max": 40,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Border"
    },
    {
      "type": "range",
      "id": "border_width",
      "label": "Border width",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "default": 2
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 40,
      "step": 5,
      "unit": "px",
      "default": 10
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "email_color",
      "label": "Email",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "email_hover_color",
      "label": "Email hover",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 28
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "email_size",
      "label": "Email size",
      "min": 14,
      "max": 28,
      "step": 2,
      "unit": "px",
      "default": 18
    },
    {
      "type": "select",
      "id": "email_weight",
      "label": "Email weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    }
  ],
  "presets": [
    {
      "name": "Contact CTA"
    }
  ]
}
{% endschema %}
