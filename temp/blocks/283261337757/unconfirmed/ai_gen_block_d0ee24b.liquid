{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-status-box-{{ ai_gen_id }} {
    display: block;
    border: 1px solid {{ block.settings.border_color }};
    padding: {{ block.settings.padding }}px;
    margin: {{ block.settings.margin_top }}px auto {{ block.settings.margin_bottom }}px;
    max-width: {{ block.settings.max_width }}px;
    text-align: left;
    font-size: {{ block.settings.font_size }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    width: 100%;
  }

  .ai-status-box__title-{{ ai_gen_id }} {
    font-weight: 700;
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_font_size }}px;
  }

  .ai-status-box__list-{{ ai_gen_id }} {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .ai-status-box__item-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.item_spacing }}px;
    color: {{ block.settings.text_color }};
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-status-box__item-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-status-box__checkmark-{{ ai_gen_id }} {
    color: {{ block.settings.checkmark_color }};
    font-weight: 700;
  }

  .ai-status-box__label-{{ ai_gen_id }} {
    font-weight: 400;
  }

  .ai-status-box__status-{{ ai_gen_id }} {
    font-weight: 400;
  }

  .ai-status-box__status-{{ ai_gen_id }}--online {
    color: {{ block.settings.status_online_color }};
  }

  .ai-status-box__status-{{ ai_gen_id }}--schedule {
    color: {{ block.settings.status_schedule_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-status-box-{{ ai_gen_id }} {
      max-width: 100%;
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-status-box-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank %}
    <p class="ai-status-box__title-{{ ai_gen_id }}">{{ block.settings.title }}</p>
  {% endif %}
  
  <ul class="ai-status-box__list-{{ ai_gen_id }}">
    {% if block.settings.show_item_1 %}
      <li class="ai-status-box__item-{{ ai_gen_id }}">
        <span class="ai-status-box__checkmark-{{ ai_gen_id }}">{{ block.settings.checkmark_symbol }}</span>
        <span class="ai-status-box__label-{{ ai_gen_id }}">{{ block.settings.item_1_label }}</span>
        <span class="ai-status-box__status-{{ ai_gen_id }} ai-status-box__status-{{ ai_gen_id }}--online">{{ block.settings.item_1_status }}</span>
      </li>
    {% endif %}
    
    {% if block.settings.show_item_2 %}
      <li class="ai-status-box__item-{{ ai_gen_id }}">
        <span class="ai-status-box__checkmark-{{ ai_gen_id }}">{{ block.settings.checkmark_symbol }}</span>
        <span class="ai-status-box__label-{{ ai_gen_id }}">{{ block.settings.item_2_label }}</span>
        <span class="ai-status-box__status-{{ ai_gen_id }} ai-status-box__status-{{ ai_gen_id }}--schedule">{{ block.settings.item_2_status }}</span>
      </li>
    {% endif %}
    
    {% if block.settings.show_item_3 %}
      <li class="ai-status-box__item-{{ ai_gen_id }}">
        <span class="ai-status-box__checkmark-{{ ai_gen_id }}">{{ block.settings.checkmark_symbol }}</span>
        <span class="ai-status-box__label-{{ ai_gen_id }}">{{ block.settings.item_3_label }}</span>
        <span class="ai-status-box__status-{{ ai_gen_id }}">{{ block.settings.item_3_status }}</span>
      </li>
    {% endif %}
  </ul>
</div>

