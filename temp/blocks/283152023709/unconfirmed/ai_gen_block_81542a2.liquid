{% doc %}
  @prompt
    Create a clickable image block where the entire image acts as a link to redirect users to a specified URL. The block should include settings for the image, link URL, and optional text overlay. When users click anywhere on the image, they should be redirected to the configured destination page.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-clickable-image-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-clickable-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    display: block;
  }

  .ai-clickable-image-img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-clickable-image-{{ ai_gen_id }}:hover .ai-clickable-image-img-{{ ai_gen_id }} {
    transform: scale({{ block.settings.hover_zoom }});
  }

  .ai-clickable-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-clickable-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-clickable-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-clickable-image-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: {{ block.settings.text_vertical_align }};
    justify-content: {{ block.settings.text_horizontal_align }};
    padding: 20px;
    pointer-events: none;
  }

  .ai-clickable-image-text-container-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    max-width: 90%;
  }

  .ai-clickable-image-heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 8px 0;
    text-shadow: {{ block.settings.text_shadow_x }}px {{ block.settings.text_shadow_y }}px {{ block.settings.text_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.text_shadow_opacity }});
  }

  .ai-clickable-image-subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subtext_size }}px;
    margin: 0;
    text-shadow: {{ block.settings.text_shadow_x }}px {{ block.settings.text_shadow_y }}px {{ block.settings.text_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.text_shadow_opacity }});
  }

  @media screen and (max-width: 749px) {
    .ai-clickable-image-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-clickable-image-subtext-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtext_size }}px * 0.8);
    }

    .ai-clickable-image-overlay-{{ ai_gen_id }} {
      padding: 15px;
    }
  }

  @media (min-width: 750px) {
    .ai-clickable-image-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }
{% endstyle %}

<a
  href="{{ block.settings.link_url }}"
  class="ai-clickable-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
  {% if block.settings.link_url == blank %}aria-disabled="true"{% endif %}
>
  <div class="ai-clickable-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-clickable-image-img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-clickable-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-clickable-image-empty-state-{{ ai_gen_id }}">
          Next, add an image
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_text_overlay and block.settings.heading != blank or block.settings.subtext != blank %}
      <div class="ai-clickable-image-overlay-{{ ai_gen_id }}">
        <div class="ai-clickable-image-text-container-{{ ai_gen_id }}">
          {% if block.settings.heading != blank %}
            <h2 class="ai-clickable-image-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
          {% endif %}
          {% if block.settings.subtext != blank %}
            <p class="ai-clickable-image-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</p>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</a>

{% schema %}
{
  "name": "Clickable image",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "range",
      "id": "hover_zoom",
      "min": 1,
      "max": 1.2,
      "step": 0.1,
      "label": "Hover zoom",
      "default": 1
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Text overlay"
    },
    {
      "type": "checkbox",
      "id": "show_text_overlay",
      "label": "Show text overlay",
      "default": false
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "subtext",
      "label": "Subtext"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "range",
      "id": "subtext_size",
      "min": 12,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Subtext size",
      "default": 16
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_horizontal_align",
      "label": "Horizontal position",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_vertical_align",
      "label": "Vertical position",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Middle"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Text shadow"
    },
    {
      "type": "range",
      "id": "text_shadow_x",
      "min": -10,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Horizontal offset",
      "default": 0
    },
    {
      "type": "range",
      "id": "text_shadow_y",
      "min": -10,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Vertical offset",
      "default": 2
    },
    {
      "type": "range",
      "id": "text_shadow_blur",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Blur radius",
      "default": 4
    },
    {
      "type": "range",
      "id": "text_shadow_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Shadow opacity",
      "default": 0.5
    }
  ],
  "presets": [
    {
      "name": "Clickable image"
    }
  ]
}
{% endschema %}
